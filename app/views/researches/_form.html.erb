<div class="panel panel-default">
    <div class="panel-heading">
        <%= yield(:form_title) %>
    </div>
    <div class="panel-body">
        <%= simple_form_for([@group, @research]) do |f| %>
        <div class="row">
            <div class="col-md-12">
                <%= f.error_notification %>
                <%= f.input :major, label: "Major", autofocus: true %>
                <%= f.input :specialization, label: "Specialization" %>
                <%= f.input :description, label: "Description", input_html: {rows: 10} %>
                <hr>
                <%= f.button :submit, class: "form-control btn btn-primary" %>
            </div>
        </div>
        <% end %>
    </div>
</div>
