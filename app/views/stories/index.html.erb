<% if user_signed_in? %>
<div class="row">
    <div class="col-lg-12">
        <h3>Stories</h3>
        <hr>
    </div>
</div>

<% if @stories.empty? %>
<div style="padding-top: 50px;"></div>
<div class="row">
    <div class="col-lg-12">
        <div class="panel">
            <div class="panel-body">
                <h3 class="text-center">
                    Stories Worth Sharing
                    <div class="row">
                        <div class="col-lg-4"></div>
                        <div class="col-lg-4">
                            <hr>
                        </div>
                        <div class="col-lg-4"></div>
                    </div>
                </h3>
                <h5 class="text-center">
                    Giving back to communities. Through stories worth to be shared.
                    <br><br>
                    <% if user_signed_in? %>
                    <%= link_to 'Post', new_story_path %> your precious stories now.
                    <% else %>
                    Signup now to post stories.
                    <% end %>
                </h5>
            </div>
        </div>
    </div>
</div>
<% else %>
<div class="row row-story">
    <div class="col-lg-12">
        <%= render @stories %>
    </div>
</div>
<% end %>

<% else %>
<body class="main">
<div class="row" style="color: white;">
    <div class="col-lg-8 col-sm-6" style="padding-top: 70px;">

        <h1><strong>Welcome to Redlist</strong> <small>Beta Version 1.0</small></h1>
        For students, by students
        <hr>
        <h4>
          <br><br>
          Share. Meaningful Experiences.
          <br><br>
          <span style="padding-left: 50px;">
          Contribute. Back to Communities.
        </span>
          <br><br>
          <span style="padding-left: 100px;">
          Empowers. To Inspires.
        </span>
        </h4>
        <br><br>
    </div>

    <div class="col-lg-4 col-sm-6" style="color: black;">
      <div class="panel">
        <div class="panel-body">
      <h2>Sign In</h2>
      <hr>
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
            <%= f.input :email, required: false, autofocus: true %>
            <%= f.input :password, required: false %>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>
        <div class="form-actions">
            <%= f.button :submit, "Sign in", class: "form-control btn-primary" %>
        </div>
        <% end %>
        <br>
        <%= link_to 'Forgot your password?', new_user_password_path %>
        <hr>
        <h2>New User? Sign Up</h2>
        <hr>
          <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= f.error_notification %>
          <div class="form-inputs">
              <%= f.input :name, required: true %>
              <%= f.input :email, required: true %>
              <%= f.input :password, required: true, hint: "6 characters minimum" %>
              <%= f.input :password_confirmation, required: true %>
          </div>
          <div class="form-actions">
              <%= f.button :submit, "Sign up", class: "form-control btn-primary" %>
          </div>
          <% end %>
      </div>
      </div>

</div>
</div>
</body>
<% end %>
